  "scripts": {
    "dev": "vite",
    "build": "npm run clear && vite build && rollup --config",
    "start": "vite serve demo",
    "pub": "npm run build && npm version patch && npm publish --access public",
    "clear": "shx rm -rf lib/* dist/*"
  },
  "devDependencies": {
    "path": "^0.12.7",
    "shx": "^0.3.4",
    "vite": "^4.1.0"
